{
  "name": "aws-lambda-twitter-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "ISC",
  "description": "template for running cron-type twitter bots",
  "author": "Shuan Wang",
  "dependencies": {
    "lwt": "^1.0.0"
  },
  "config": {
    "exclude": "*.DS_Store* yarn.lock npm-debug.log node_modules/.yarn-integrity *.git* *.svn*"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "zip -X -x $npm_package_config_exclude -r $npm_package_name.zip .",
    "upload": "aws lambda update-function-code --function-name $npm_package_name --zip-file fileb://`pwd`/$npm_package_name.zip",
    "deploy": "npm run build && npm run upload"
  }
}
